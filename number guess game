logo="""  ________                              _______               ___.                 
 /  _____/ __ __  ____   ______ ______  \      \  __ __  _____\_ |__   ___________ 
/   \  ___|  |  _/ __ \ /  ___//  ___/  /   |   \|  |  \/     \| __ \_/ __ \_  __ \
\    \_\  |  |  \  ___/ \___ \ \___ \  /    |    |  |  |  Y Y  | \_\ \  ___/|  | \/
 \______  |____/ \___  /____  /____  > \____|__  |____/|__|_|  |___  /\___  |__|   
        \/           \/     \/     \/          \/            \/    \/     \/       
"""
import random
numbers_to_guess=random.randint(1,100) 
print(logo)
print("Welcome to the number guessing game!")
print("I am thinking of a number between 1 to 100.") 
def set_difficulty():
    difficultiy=input("choose a difficulty.type 'easy' or 'hard':\n").lower()                                                                                                          
    if difficultiy=='easy':
       return 10
    else:
        return 5
attempts=set_difficulty()
while attempts>0:
    print(f"you have {attempts}.attempts remaining")
    guess=int(input("make a guess:\n"))

    if guess==numbers_to_guess:
        print("you got it. the number was {numbers_to_guess}.")
        break
    elif guess < numbers_to_guess:
        print("too low.")
    else:
        print("too high.")

    attempts-=1

    if attempts==0:
        print(f"You've run out of guesses. The number was {numbers_to_guess}. Game over ğŸ˜”")
    else:
        print("guess again.")
